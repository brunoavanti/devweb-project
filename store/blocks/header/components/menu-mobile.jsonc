        "props": {
            "blockClass": ["full-width"],
            "orientation": "vertical"
        }
    },
    

    ///// -------------------------------------- acordion department 1
    "menu-item#department1-accordion": {
        "props": {
            "blockClass": ["drawer-margin","dynamic-title"],
            "id": "menu-item-department1-accordion",
            "itemProps": {
                "tagTitle": "department1",
                "text": "DEPARTAMENTO 1"
            }
        },
        "blocks": [
            "vtex.menu@2.x:submenu.accordion#department-accordion"
        ]
    },
    ///// -------------------------------------- acordion department 2
