        "children": [
            "menu-item#news",
            "menu-item#outlet",
            "menu-item#department1-accordion",
            "menu-item#department2-accordion",
            "menu-item#department3-accordion",
            "menu-item#department4",
            "menu-item#my-account",
            "menu-item#partner-stores"
